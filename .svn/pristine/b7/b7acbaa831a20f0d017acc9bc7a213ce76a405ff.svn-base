<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.royao.mapper.DgroupbuyClassMapper">

    <resultMap id="RMDgroupbuyClass" type="com.royao.model.DgroupbuyClass">
        <result property="classId" column="class_id"/>
        <result property="className" column="class_name"/>
        <result property="classImg" column="class_img"/>
        <result property="classParentId" column="class_parent_id"/>
        <result property="sort" column="sort"/>
        <result property="deep" column="deep"/>
    </resultMap>
    
    <resultMap type="com.royao.model.DgroupbuyClass" id="RMDgroupbuyClassExtends" extends="RMDgroupbuyClass">
    	<association property="parentGroupbuy" column="class_parent_id" select="queryById"></association>
    	<association property="groupbuyList" column="class_id" select="getGroupbuyByParentId"></association>
    </resultMap>
    
    <resultMap type="com.royao.model.DgroupbuyClass" id="RMDgroupbuyClassList" extends="RMDgroupbuyClass">
    	<association property="groupbuyList" column="class_id" select="getGroupbuyByParentId"></association>
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        <![CDATA[
		class_id,class_name,class_parent_id,sort,deep,class_img
	    ]]>
    </sql>

    <!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
    <insert id="save" useGeneratedKeys="true" keyProperty="classId">
        <![CDATA[
        INSERT INTO d_groupbuy_class (
        	class_id ,
        	class_name ,
        	class_parent_id ,
        	sort ,
        	deep,
        	class_img
        ) VALUES (
        	#{classId} ,
        	#{className} ,
        	#{classParentId} ,
        	#{sort} ,
        	#{deep},
        	#{classImg}
        )
    ]]>
        <!--
            oracle: order="BEFORE" SELECT sequenceName.nextval AS ID FROM DUAL
            DB2: order="BEFORE"" values nextval for sequenceName
        <selectKey resultType="java.lang.Long" order="BEFORE" keyProperty="userId">
            SELECT sequenceName.nextval AS ID FROM DUAL
        </selectKey>
        -->
    </insert>

    <update id="update">
        <![CDATA[
        UPDATE d_groupbuy_class SET
	        class_name = #{className} ,
	        class_parent_id = #{classParentId} ,
	        sort = #{sort} ,
	        deep = #{deep} ,
	        class_img = #{classImg}
        WHERE 
	        class_id = #{classId} 
    ]]>
    </update>

    <delete id="delete">
        <![CDATA[
        DELETE FROM d_groupbuy_class WHERE
        class_id = #{id} 
    ]]>
    </delete>

    <select id="queryById" resultMap="RMDgroupbuyClass">
        SELECT
        <include refid="columns"/>
        <![CDATA[
		    FROM d_groupbuy_class 
	        WHERE 
		        class_id = #{id} 
	    ]]>
    </select>
    
    <select id="getGroupbuyByParentId" resultMap="RMDgroupbuyClass">
        SELECT
        <include refid="columns"/>
        <![CDATA[
		    FROM d_groupbuy_class 
	        WHERE 
		        class_parent_id = #{id}  limit 1
	    ]]>
    </select>
    
    <select id="findAll" resultMap="RMDgroupbuyClassList" parameterType="com.royao.model.DgroupbuyClass">
        SELECT
        <include refid="columns"/>
		    FROM d_groupbuy_class 
	       	<where>
	       		<if test="classId != null">class_id = #{classId}</if>
	       		<if test="classParentId != null">class_parent_id = #{classParentId}</if>
	       		<if test="pageInfo != null">
        			limit #{pageInfo.begin}, #{pageInfo.end}
       			</if>
	       	</where>
    </select>

	<select id="listGoodsClassBy" resultMap="RMDgroupbuyClass" parameterType="com.royao.model.DgroupbuyClass">
        SELECT
        a.class_id,a.class_name,a.class_parent_id,a.sort,a.deep,a.class_img
		FROM d_groupbuy_class a LEFT JOIN d_groupbuy_class b 
			ON a.class_parent_id = b.class_id WHERE a.deep > 1 AND ( 
			a.class_parent_id in (SELECT class_id FROM d_groupbuy_class WHERE class_parent_id = 1) 
 		OR a.class_parent_id = 1) 
    </select>

    <select id="listWithPageCount" resultType="long">
        SELECT count(*) FROM d_groupbuy_class where 1=1

    </select>

    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="listWithPage" resultType="java.util.HashMap">
        SELECT
        <include refid="columns"/>
        FROM d_groupbuy_class
        where 1=1
        limit #begin# , #end#
    </select>


    <select id="queryAll" resultMap="RMDgroupbuyClass">
        SELECT
        <include refid="columns"/>
        FROM d_groupbuy_class
    </select>
	<select id="queryAllGoodsClass" resultMap="RMDgroupbuyClass">
        select a.class_id,b.class_name AS firstClass,a.class_name as secondClass,a.sort
		from d_groupbuy_class a LEFT JOIN   d_groupbuy_class b
		on  b.class_id = a.class_parent_id
		where b.class_parent_id=1
		union all
		select class_id,class_name,'' ,sort FROM d_groupbuy_class where class_parent_id=1
		order by 2,1
    </select>
    <select id="queryAllGoodsClassCount" resultMap="RMDgroupbuyClass">
		select count(*) FROM (select a.class_id,b.class_name AS firstClass,a.class_name as secondClass,a.sort
		from d_groupbuy_class a LEFT JOIN   d_groupbuy_class b
		on  b.class_id = a.class_parent_id
		where b.class_parent_id=1
		union all
		select class_id,class_name,'' ,sort FROM d_groupbuy_class where class_parent_id=1
		order by 2,1) as a     
    </select>
    <select id="queryGoodClassOne" resultMap="RMDgroupbuyClass">
        SELECT
        <include refid="columns"/>
        FROM d_groupbuy_class where class_parent_id = 1
    </select>


    <select id="queryGoodClassTwo" resultMap="RMDgroupbuyClass">
       select b.* from d_groupbuy_class a right outer join d_groupbuy_class b on a.class_id = b.class_parent_id
       where a.class_parent_id = 1
    </select>

    <select id="queryHomeGoodsClass" resultMap="RMDgroupbuyClass">
        SELECT
        <include refid="columns"/>
        FROM d_groupbuy_class where class_parent_id = 1 limit 0,5
    </select>

    <select id="queryByCondition" resultMap="RMDgroupbuyClass">
        SELECT
        <include refid="columns"/>
        FROM d_groupbuy_class

        <where>
            <if test="@Ognl@isNotEmpty(classId)">
                AND class_id = #{classId}
            </if>
            <if test="@Ognl@isNotEmpty(className)">
                AND class_name = #{className}
            </if>
            <if test="@Ognl@isNotEmpty(classParentId)">
                AND class_parent_id = #{classParentId}
            </if>
            <if test="@Ognl@isNotEmpty(sort)">
                AND sort = #{sort}
            </if>
            <if test="@Ognl@isNotEmpty(deep)">
                AND deep = #{deep}
            </if>
        </where>
    </select>


</mapper>

