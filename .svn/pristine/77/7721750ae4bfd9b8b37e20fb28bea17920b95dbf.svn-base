<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.royao.mapper.DvipMapper">

    <resultMap id="RMDvip" type="com.royao.model.Dvip">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="require" column="require"/>
        <result property="remark" column="remark"/>
        <result property="status" column="status"/>
        <result property="greade" column="greade"/>
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        <![CDATA[
		id,`name`,`require`,remark,`status`,`greade`
	    ]]>
    </sql>

    <!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
        INSERT INTO d_vip (
        	id ,
        	`name` ,
        	`require` ,
        	remark ,
        	`status` ,
        	`greade`
        ) VALUES (
        	#{id} ,
        	#{name} ,
        	#{require} ,
        	#{remark} ,
        	#{status},
        	#{greade} 
        )
    ]]>
        <!--
            oracle: order="BEFORE" SELECT sequenceName.nextval AS ID FROM DUAL
            DB2: order="BEFORE"" values nextval for sequenceName
        <selectKey resultType="java.lang.Long" order="BEFORE" keyProperty="userId">
            SELECT sequenceName.nextval AS ID FROM DUAL
        </selectKey>
        -->
    </insert>

    <update id="update">
        <![CDATA[
        UPDATE d_vip SET
	        `name` = #{name} ,
	        `require` = #{require} ,
	        remark = #{remark} ,
	        `status` = #{status},
	        `greade` = #{greade}, 
        WHERE 
	        id = #{id} 
    ]]>
    </update>

    <delete id="delete">
        <![CDATA[
        DELETE FROM d_vip WHERE
        id = #{id} 
    ]]>
    </delete>

    <select id="queryById" resultMap="RMDvip">
        SELECT
        <include refid="columns"/>
        <![CDATA[
		    FROM d_vip 
	        WHERE 
		        id = #{id} 
	    ]]>
    </select>


    <select id="listWithPageCount" resultType="long">
        SELECT count(*) FROM d_vip where 1=1

    </select>

    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="listWithPage" resultType="java.util.HashMap">
        SELECT
        <include refid="columns"/>
        FROM d_vip
        where 1=1
        limit #begin# , #end#
    </select>


    <select id="queryAll" resultMap="RMDvip">
        SELECT
        <include refid="columns"/>
        FROM d_vip
    </select>

    <select id="queryByCondtion" resultMap="RMDvip">
        SELECT
        <include refid="columns"/>
        FROM d_vip

        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="name != null and name !=''">
                AND name = #{name}
            </if>
            <if test="require != null">
                AND require = #{require}
            </if>
            <if test="remark != null and remark !=''">
                AND remark = #{remark}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="greade != null">
            	and `greade` = #{greade}
            </if>
        </where>
    </select>


</mapper>

