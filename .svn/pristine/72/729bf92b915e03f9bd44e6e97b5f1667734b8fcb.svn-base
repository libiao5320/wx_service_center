<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.royao.mapper.DmemberRemarkMapper">

    <resultMap id="RMDmemberRemark" type="com.royao.model.DmemberRemark">
        <result property="id" column="id"/>
        <result property="managerId" column="manager_id"/>
        <result property="manager" column="manager"/>
        <result property="memberId" column="member_id"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        <![CDATA[
		id,manager_id,manager,member_id,content,create_time
	    ]]>
    </sql>

    <!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
        INSERT INTO d_member_remark (
        	manager_id,
        	manager,
        	member_id,
        	content,
        	create_time
        ) VALUES (
        	#{managerId} ,
        	#{manager} ,
        	#{memberId} ,
        	#{content} ,
        	#{createTime} 
        )
    ]]>
	</insert>
	
	<select id="findList" resultMap="RMDmemberRemark" parameterType="com.royao.model.DmemberRemark">
		select 
		<include refid="columns"/>
		from d_member_remark
		<where>
			<if test="memberId != null">AND member_id = #{memberId}</if>
		</where>
	</select>
	
	<delete id="delete">
        <![CDATA[
        DELETE FROM d_member_remark WHERE
        id = #{id} 
    	]]>
    </delete>
</mapper>

