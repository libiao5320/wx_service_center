            </if>
            <if test="@Ognl@isNotEmpty(updateTimeEnd)">
                AND update_time &lt;= #{updateTimeEnd}
            </if>
            <if test="@Ognl@isNotEmpty(updateBy)">
                AND update_by = #{updateBy}
            </if>
            <if test="@Ognl@isNotEmpty(purpose)">
                AND purpose = #{purpose}
            </if>
        </where>
    </select>


